    "scripts": {
        "build": "yarn clear-dist && parcel build public/index.html --no-source-maps",
        "clear-dist": "rm -rf dist/",
        "open-chrome": "wait-on http://localhost:3000 && open -a \"Google Chrome\" http://localhost:3000",
        "start-client": "yarn clear-dist && concurrently \"yarn watch-client\" \"yarn open-chrome\" --raw",
        "watch-client": "parcel public/index.html -p 3000"
    },
    "devDependencies": {
        "@types/react": "^16.7.18",
        "@types/react-dom": "^16.0.11",
        "autoprefixer": "^9.4.4",
        "babel-core": "^6.26.3",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "concurrently": "^4.1.0",
        "json5": "^2.1.0",
        "parcel-bundler": "^1.11.0",
        "sass": "^1.15.3",
        "tslint": "^5.12.0",
        "typescript": "^3.2.2",
        "wait-on": "^3.2.0",
        "yarn": "^1.13.0"
    },
    "dependencies": {
        "babel-polyfill": "^6.26.0",
        "react": "^16.7.0",
        "react-apollo": "^2.3.3",
        "react-dom": "^16.7.0"
    }
}
